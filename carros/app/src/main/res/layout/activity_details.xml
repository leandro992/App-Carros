<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.DetailsActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_car_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/audir8"
        android:layout_gravity="center"/>

    <TextView
        android:textAllCaps="true"
        android:id="@+id/text_modelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="@string/modelo"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/fabricante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fabricante"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/text_host_power"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/cavalos"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/cavalos"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/text_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/preco"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/preco"
        android:textAlignment="center" />

    </LinearLayout>

</ScrollView>